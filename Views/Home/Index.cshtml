    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to Retail WebApp</h1>
    <p class="lead">Discover the best products at unbeatable prices.</p>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Products", "Home")" role="button">Shop Now</a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Featured Products</h2>
        <p>Check out our featured products!</p>
        <a class="btn btn-secondary" href="@Url.Action("Products", "Home")">View Products</a>
    </div>
    <div class="col-md-4">
        <h2>Special Offers</h2>
        <p>Don't miss our special discounts and offers.</p>
        <a class="btn btn-secondary" href="@Url.Action("Products", "Home")">View Offers</a>
    </div>
    <div class="col-md-4">
        <h2>Categories</h2>
        <p>Browse our products by categories.</p>
        <a class="btn btn-secondary" href="@Url.Action("Categories", "Home")">Browse Categories</a>
