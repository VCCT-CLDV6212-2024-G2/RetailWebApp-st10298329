
@{
    ViewData["Title"] = "Your Cart";
}

<h1>Your Cart</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Product.Price</td>
                    <td>$@(item.Product.Price * item.Quantity)</td>
                    <td><a href="@Url.Action("RemoveFromCart", "Home", new { id = item.Product.RowKey })" class="btn btn-danger">Remove</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Checkout", "Home")" class="btn btn-success">Proceed to Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
    <a href="@Url.Action("Products", "Home")" class="btn btn-primary">Continue Shopping</a>
}

