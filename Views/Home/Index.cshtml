
<div class="container mt-5">
    <h1 class="text-center">Dashboard</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Upload File</h3>
                </div>
                <div class="card-body">
                    <form asp-action="UploadFileToAzure" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="file">Choose file to upload:</label>
                            <input type="file" name="file" id="file" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Upload File</button>
                    </form>
                </div>
            </div>
        </div>

        <a class="btn btn-primary" href="@Url.Action("AddProduct", "Home")">Add New Product</a>

    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>Add Customer </h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddCustomerProfile" method="post">
                        <div class="form-group">
                            <input type="text" name="FirstName" placeholder="First Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="LastName" placeholder="Last Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="email" name="Email" placeholder="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="PhoneNumber" placeholder="Phone Number" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <h1 class="text-center">Queue Operations</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Enqueue Transaction</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EnqueueTransaction" method="post">
                        <div class="form-group">
                            <label for="transactionId">Transaction ID</label>
                            <input type="text" name="transactionId" id="transactionId" class="form-control" placeholder="Enter transaction ID" required />
                        </div>
                        <div class="form-group">
                            <label for="amount">Amount</label>
                            <input type="number" step="0.01" name="amount" id="amount" class="form-control" placeholder="Enter amount" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Submit Transaction</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Enqueue Inventory Process</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EnqueueInventory" method="post">
                        <div class="form-group">
                            <label for="productId">Product ID</label>
                            <input type="text" name="productId" id="productId" class="form-control" placeholder="Enter product ID" required />
                        </div>
                        <div class="form-group">
                            <label for="quantity">Quantity</label>
                            <input type="number" name="quantity" id="quantity" class="form-control" placeholder="Enter quantity" required />
                        </div>
                        <div class="form-group">
                            <label for="action">Action</label>
                            <select name="action" id="action" class="form-control" required>
                                <option value="Restock">Restock</option>
                                <option value="Sell">Sell</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Submit Inventory Process</button>
                    </form>
                </div>
            </div>
        </div>
</div>



